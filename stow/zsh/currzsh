# Shell colors
refresh_shell() {
    if [[ "${EUID}" == "0" ]]; then
        export PS1="$(print '%{\e[1;31m%}%M%{\e[1;33m%} %c %{\e[1;33m%}%% %{\e[0m%}')" # Root color is red
    else
        export PS1="$(print '%{\e[1;32m%}%n@%M%{\e[1;33m%} %~ %{\e[1;33m%}%% %{\e[0m%}')"
    fi
}


